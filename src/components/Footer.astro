---
import LogoFooter from "../assets/icons/logo.svg";
import IconFacebook from "../assets/icons/facebookClair.svg";
import IconInstagram from "../assets/icons/instagramclair.svg";
import IconTwitter from "../assets/icons/twitterclair.svg";
import IconYoutube from "../assets/icons/youtubeclair.svg";
---

<footer class="bg-darkpurple text-white py-16 px-6 md:px-12 lg:px-20 text-sm">
    <!-- Logo centré en haut avec plus d'espace -->
    <div class="flex flex-col items-center justify-center mb-16">
        <a href="/" aria-label="Accueil">
            <LogoFooter class="w-24 lg:w-25 lg:h-16" />
        </a>
        <h3 class="uppercase text-sm tracking-wide text-stone-400 mt-1">
            Festival de Science Fiction
        </h3>
    </div>

    <!-- Conteneur avec colonnes et marges horizontales plus prononcées -->
    <div
        class="grid grid-cols-1 gap-12 md:grid-cols-3 md:gap-6 md:px-8 lg:px-16 max-w-7xl mx-auto"
    >
        <!-- Colonne 1 : Mentions légales & Contact -->
        <div class="flex flex-col items-center">
            <a
                href="/mentions-legales"
                class="font-bold text-base mb-8 uppercase text-center"
                >MENTIONS LEGALES</a
            >

            <div class="mt-4 text-center">
                <h5 class="uppercase text-sm font-bold tracking-wide mb-4">
                    CONTACT
                </h5>
                <address class="not-italic text-center">
                    90000 Belfort <br class="mb-2" />
                    <a href="tel:0384542727" class="block my-2"
                        >03 84 54 27 27</a
                    >
                    <a href="mailto:contact@sci-fi-stival.fr"
                        >contact@sci-fi-stival.fr</a
                    >
                </address>
            </div>
        </div>

        <!-- Colonne 2 : Archives (parfaitement centrée) -->
        <div class="flex justify-center items-start">
            <a
                href="/archives"
                class="font-bold text-base uppercase text-center">ARCHIVES</a
            >
        </div>

        <!-- Colonne 3 : Contacts & Accès et Réseaux sociaux -->
        <div class="flex flex-col items-center">
            <a
                href="/contact"
                class="font-bold text-base mb-8 uppercase text-center"
                >CONTACTS & ACCES</a
            >

            <div class="mt-8 flex flex-col items-center">
                <h5
                    class="uppercase text-sm font-bold tracking-wide mb-6 text-center"
                >
                    NOUS SUIVRE
                </h5>

                <!-- Icônes avec plus d'espace -->
                <div class="flex justify-center gap-6 mt-2">
                    <a href="https://facebook.com" aria-label="Facebook">
                        <IconFacebook class="w-8 h-8 fill-white" />
                    </a>
                    <a href="https://instagram.com" aria-label="Instagram">
                        <IconInstagram class="w-8 h-8 fill-white" />
                    </a>
                    <a href="https://twitter.com" aria-label="Twitter">
                        <IconTwitter class="w-8 h-8 fill-white" />
                    </a>
                    <a href="https://youtube.com" aria-label="YouTube">
                        <IconYoutube class="w-8 h-8 fill-white" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>
