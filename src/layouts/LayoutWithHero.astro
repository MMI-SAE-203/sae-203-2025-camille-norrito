---
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro:assets";

const {
    title,
    description,
    subTitle,
    src,
    srcDesktop,
    alt,
    classContent = "main-content max-w-2xl mx-6 my-16 lg:mx-auto",
} = Astro.props;
---

<Layout title={title} description={description}>
    <!-- Image en plein Ã©cran -->
    <div class="relative min-h-screen">
        <picture class="absolute inset-0 w-full h-full">
            <source srcset={srcDesktop.src} media="(min-width: 768px)" />
            <img
                src={src.src}
                alt={alt}
                class="duotone w-full h-full object-cover"
            />
        </picture>
    </div>

    <div class="flex flex-col items-center text-white px-6 py-20">
        <h1 class="text-4xl lg:text-6xl font-bold text-center">{title}</h1>
        {subTitle && <h2 class="font-bold uppercase mt-4">{subTitle}</h2>}
    </div>

    <!-- Contenu principal sous le titre -->
    <div class={classContent}>
        <slot name="content" />
    </div>
</Layout>
